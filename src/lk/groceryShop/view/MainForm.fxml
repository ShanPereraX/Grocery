                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <SepiaTone/>
                    </effect>
                </JFXButton>
                <JFXButton fx:id="btnPlaceOrder" layoutX="21.0" layoutY="227.0" onAction="#btnPlaceOrderOnAction"
                           prefHeight="56.0" prefWidth="154.0" style="-fx-background-color: F7F7F7;" text="Place Order">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
                <JFXButton fx:id="btnItem" layoutX="21.0" layoutY="308.0" onAction="#btnItemOnAction" prefHeight="56.0"
