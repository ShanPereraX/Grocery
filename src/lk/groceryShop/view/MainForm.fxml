                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
                <JFXButton fx:id="btnHome" layoutX="70.0" layoutY="24.0" onAction="#btnHomeOnAction" prefHeight="56.0"
                           prefWidth="69.0" style="-fx-background-color: F7F7F7; -fx-background-radius: 50;"
                           text="Home">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="subPanel" layoutX="202.0" layoutY="73.0" prefHeight="530.0" prefWidth="820.0"
                    style="-fx-background-radius: 30; -fx-background-color: F7F7F7;"/>
        <Label layoutX="196.0" layoutY="14.0" prefHeight="16.0" prefWidth="321.0" text="Grocery Store"
