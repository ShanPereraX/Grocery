<AnchorPane fx:id="mainPanel" prefHeight="639.0" prefWidth="1050.0" style="-fx-background-color: #222831;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.groceryShop.controller.MainFormController">
    <children>
        <AnchorPane fx:id="sidePanel" layoutX="-48.0" layoutY="15.0" prefHeight="607.0" prefWidth="200.0"
